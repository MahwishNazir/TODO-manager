# AI Agent Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED
# =============================================================================

# OpenAI API Key (for Agents SDK)
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"

# JWT Secret (shared with backend for authentication - same as BETTER_AUTH_SECRET in backend)
BETTER_AUTH_SECRET="your-better-auth-secret-here"

# =============================================================================
# MCP SERVER
# =============================================================================

# URL of the MCP server (from Phase III Step 3)
MCP_SERVER_URL=http://localhost:8001

# Timeout for MCP tool invocations in seconds (default: 30)
MCP_TIMEOUT_SECONDS=30

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# OpenAI model to use (default: gpt-4)
AGENT_MODEL=gpt-3.5-turbo

# Temperature for deterministic outputs (default: 0.0)
AGENT_TEMPERATURE=0.0

# Maximum tokens for agent responses (default: 1000)
AGENT_MAX_TOKENS=1000

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================

# Session expiration time in seconds (default: 1800 = 30 minutes)
SESSION_TTL_SECONDS=1800

# Session storage backend: memory or redis (default: memory)
SESSION_STORE=memory

# Redis URL (required if SESSION_STORE=redis)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CONFIRMATION SETTINGS
# =============================================================================

# Timeout for pending confirmations in seconds (default: 300 = 5 minutes)
CONFIRMATION_TIMEOUT_SECONDS=300

# =============================================================================
# AUDIT & LOGGING
# =============================================================================

# Enable tool invocation audit logging (default: true)
AUDIT_ENABLED=true

# Database URL for audit storage (uses backend database if not set)
# DATABASE_URL=postgresql://user:pass@localhost:5432/todo_db

# =============================================================================
# JWT SETTINGS (must match backend/src/config.py)
# =============================================================================

# JWT signing algorithm (default: HS256)
JWT_ALGORITHM=HS256

# JWT issuer claim (must match backend JWT_ISSUER)
JWT_ISSUER=todo-app

# JWT audience claim (must match backend JWT_AUDIENCE)
JWT_AUDIENCE=todo-api
